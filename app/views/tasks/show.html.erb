<h1> <%= @task.title %> </h1>

<p> <%= @task.details %> | <%= @task.completed == true ? "Task completed" : "Task not completed" %> </p>

<div>
  <%= link_to 'Tasks', tasks_path %>
</div>

<div>
  <%= link_to 'Edit', edit_task_path %>
</div>

<div>
  <%= link_to 'Delete',
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</div>
